<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="GravityItem">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ControlBarItem">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:layout_marginRight">4dp</item>
    </style>

    <style name="Widget.BottomNavigationView" parent="Widget.Design.BottomNavigationView">
        <item name="fontFamily">sans-serif-medium</item>
    </style>

    <style name="SeparatorText">
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginLeft">16dp</item>
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:fontFamily">sans-serif-condensed</item>
    </style>

    <style name="sliderStyle">
        <item name="android:paddingLeft">@dimen/slider_sticker_padding_horizontal</item>
        <item name="android:paddingRight">@dimen/slider_sticker_padding_horizontal</item>
    </style>

    <style name="About" parent="Theme.Mal.Light">
        <item name="colorPrimary">@color/md_white_1000</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>

        <item name="mal_card_background">@color/CARD</item>
        <item name="android:windowBackground">@color/windowBackground</item>

        <item name="mal_color_primary">@color/FontStrong</item>
        <item name="mal_color_secondary">@color/FontWeak</item>
    </style>

</resources>
