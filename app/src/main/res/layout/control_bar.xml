<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/controlBar"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:clipToPadding="false"
            android:orientation="horizontal"
            android:paddingLeft="4dp"
            android:paddingTop="8dp"
            android:paddingRight="4dp"
            android:paddingBottom="8dp">

            <com.bernaferrari.emojislidersample.views.ControlBarItemToggleView
                android:id="@+id/thumbAllowReselection"
                style="@style/ControlBarItem"
                app:src="@drawable/ic_select"
                app:text="@string/thumbAllowReselection" />

            <com.bernaferrari.emojislidersample.views.ControlBarItemToggleView
                android:id="@+id/shouldShowAverage"
                style="@style/ControlBarItem"
                app:src="@drawable/ic_average"
                app:text="@string/showAverage" />

            <com.bernaferrari.emojislidersample.views.ControlBarItemToggleView
                android:id="@+id/shouldDisplayPopup"
                style="@style/ControlBarItem"
                app:src="@drawable/ic_alert"
                app:text="@string/showPopOver" />

        </LinearLayout>

    </HorizontalScrollView>

</FrameLayout>
